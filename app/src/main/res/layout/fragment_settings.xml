<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".SettingsFragment">

    <Switch
        android:id="@+id/SaveRolledCharities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:minHeight="48dp"
        android:text="@string/save_rolled_charities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/EnableDuplicatesSettings"
        app:layout_constraintTop_toBottomOf="@+id/RegionSpinner"
        app:layout_constraintVertical_bias="0.376"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:fontFamily="@font/concertone"/>

    <Switch
        android:id="@+id/EnableDuplicatesSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="264dp"
        android:minHeight="48dp"
        android:text="@string/allow_duplicates"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegionSpinner"
        app:layout_constraintVertical_bias="0.376"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:fontFamily="@font/concertone"/>

    <Spinner
        android:id="@+id/RegionSpinner"
        android:layout_width="309dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427"
        android:fontFamily="@font/concertone"/>
</androidx.constraintlayout.widget.ConstraintLayout>